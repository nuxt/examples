{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>nuxt/renovate-config-nuxt"
  ],
  "rebaseStalePrs": true,
  "prCreation": "not-pending",
  "packageRules": [
    {
      "groupName": "nuxt core",
      "groupSlug": "nuxt",
      "matchPackageNames": [
        "nuxt",
        "@nuxt/kit",
        "@nuxt/schema",
        "@nuxt/vite-builder",
        "@nuxt/webpack-builder",
        "@nuxt/rspack-builder"
      ]
    },
    {
      "groupName": "nuxt ui",
      "groupSlug": "nuxt-ui",
      "matchPackageNames": [
        "@nuxt/ui"
      ]
    }
  ]
}
