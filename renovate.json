{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>nuxt/renovate-config-nuxt"
  ],
  "rebaseStalePrs": true,
  "prCreation": "not-pending",
  "packageRules": [
    {
      "groupName": "nuxt core",
      "groupSlug": "nuxt",
      "matchPackageNames": [
        "nuxt"
      ],
      "matchPackagePatterns": [
        "^@nuxt/kit",
        "^@nuxt/schema",
        "^@nuxt/vite-builder",
        "^@nuxt/webpack-builder",
        "^@nuxt/rspack-builder"
      ]
    }
  ]
}
